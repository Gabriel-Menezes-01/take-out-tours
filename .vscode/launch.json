{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Take Out Tours - Full Stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/server.js",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"]
    },
    {
      "name": "ğŸ”§ API Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/server.js",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "ğŸ¨ Frontend Dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸ—„ï¸ Database Sync",
      "type": "node",
